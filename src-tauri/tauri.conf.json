{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ntfier",
  "version": "0.6.0",
  "identifier": "com.ntfier.app",
  "build": {
    "frontendDist": "../ui/dist/client",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm --filter ui dev",
    "beforeBuildCommand": "pnpm --filter ui build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Ntfier",
        "width": 1024,
        "height": 768,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https: wss: http: ws:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "icons/*": "icons/"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERFM0NBNDRGQTYzRjNGNEIKUldSTFB6K21UNlE4M3NUUHY5T2hYMXljKzNKdUNNSTNDa3NLSnZVcGtJc05MMEI4YUs0eGM1a2gK",
      "endpoints": [
        "https://github.com/kbzowski/ntfier/releases/latest/download/update.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
