{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ntfier",
  "version": "0.1.0",
  "identifier": "com.ntfier.app",
  "build": {
    "frontendDist": "../ui/dist/client",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm --filter ui dev",
    "beforeBuildCommand": "pnpm --filter ui build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Ntfier",
        "width": 1024,
        "height": 768,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "icons/*": "icons/"
    }
  }
}
